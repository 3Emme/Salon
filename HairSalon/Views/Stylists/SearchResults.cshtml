@{
  Layout = "_Layout";
}
@using HairSalon.Models;
<h1>Stylist search results:</h1>
@if (@Model.Count == 0)
{
  <h3>No stylists with that name were found!</h3>
}
else
{
  <h3>Stylist Search Results:</h3>
  @foreach (Stylist stylist in Model)
  {
    <li>@stylist.StylistId . <a href="/stylists/details/@stylist.StylistId"> @stylist.StylistName</a></li>
  }
}
@using (Html.BeginForm("Search","Stylists"))
  {
    @Html.Label("Search all Stylists:")
    @Html.TextBox("stylistName")
    <input type="submit" value="Search!" />
  }
<p>@Html.ActionLink("Go Home","Index","Home")</p>