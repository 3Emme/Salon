@{
  Layout = "_Layout";
}
@using HairSalon.Models;
<h1>Current Stylists:</h1>
@if (@Model.Count == 0)
{
  <h3>No stylists have been added yet!</h3>
}
@foreach (Stylist stylist in Model)
{
  <li>@stylist.StylistId . <a href="/stylists/details/@stylist.StylistId"> @stylist.StylistName</a></li>
}
<p>@Html.ActionLink("Add a Stylist","Create")</p>
<p>@Html.ActionLink("Go Home","Index","Home")</p>