@{
  Layout = "_Layout";
}
@model HairSalon.Models.Client
<h4>Edit @Html.DisplayFor(model => model.ClientName)!</h4>
@using (Html.BeginForm())
{
    @Html.HiddenFor(model => model.StylistId)
    @Html.HiddenFor(model => model.ClientId)
    @Html.LabelFor(model => model.ClientName)
    @Html.EditorFor(model => model.ClientName)
    @Html.LabelFor(model => model.ClientDetails)
    @Html.EditorFor(model => model.ClientDetails)
    <input type="submit" value="Save" />
}
<br>
<p>@Html.ActionLink("Show all Stylists", "Index","Stylists")</p>
<p>@Html.ActionLink("Go Home","Index","Home")</p>